<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/customDialog_resetPass_textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şifreni Sıfırla"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21sp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/customDialog_resetPass_imageViewClose"
            android:textAlignment="center"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_close"
            android:layout_alignParentRight="true"
            android:id="@+id/customDialog_resetPass_imageViewClose"/>
    </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email Adresinizi Giriniz"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:id="@+id/customDialog_resetPass_editTextEmail"
            android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Kapat"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textColor="#FFFFFF"

            android:textStyle="bold"
            android:id="@+id/customDialog_resetPass_buttonClose"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Sıfırla"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:id="@+id/customDialog_resetPass_buttonResetPass"/>

    </LinearLayout>


</LinearLayout>